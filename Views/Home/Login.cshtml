@model LoginUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <h1>You May Log In Here</h1>
    <a asp-action="Index" asp-controller="Home">Need to Register? Click here </a>
    <form asp-action="Signin" asp-controller="Home" asp-method="post">
        <span asp-validation-for="LoginEmail"></span><br>
        <span asp-validation-for="LoginPassword"></span><br>

        <label asp-for="LoginEmail">Email Address:</label>
        <input asp-for="LoginEmail">

        <label asp-for="LoginPassword">Password</label>
        <input asp-for="LoginPassword">

        <input type="submit" value="Log In"> 

      
    </form>
</body>
</html>