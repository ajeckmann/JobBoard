@model Funthing
<a class="HomeLink" asp-action="Dashboard">Home</a><br>
<a class="HomeLink" asp-action="Logout">Logout</a><br>

<h1>Add a new Funthing! Yea!</h1>
<form class="col-5" asp-action="AddFunthing" asp-controller="Home" method="post">
    <h3>Complete the form below to add a new Funthing:</h3>

    <div class="form-group">
        <span asp-validation-for="Title"></span>
        <label asp-for="Title">Title: </label>
        <input asp-for="Title" class="form-control">

        <span asp-validation-for="FunthingDate"></span>
        <label asp-for="FunthingDate">FunthingDate </label>
        <input type="datetime-local" asp-for="FunthingDate" class="form-control">



        <span asp-validation-for="Duration"></span>
        <label asp-for="Duration">Duration: </label>
        <input asp-for="Duration" class="form-control">





        <span asp-validation-for="Description"></span>
        <label asp-for="Description">Description: </label>
        <textarea asp-for="Description" class="form-control"></textarea>

        <input asp-for="UserID" type="hidden" value="@ViewBag.UserLoggedIn.UserId">
            @* //foreign key for creator *@
        <input  class="btn btn-outline-warning" type="submit" value= "Add Funthing">








    </div>


</form>