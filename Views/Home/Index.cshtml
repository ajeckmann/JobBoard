@model User



<div class="text-center">

<h1>Register Here</h1>

<a asp-action="Login" asp-controller="Home">Already regristrationized? Click here to log in</a>

<form asp-action="Register" asp-controller="Home" asp-method="post">
    
    <span asp-validation-for="FirstName"></span><br>

    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"><br><br>

    <span asp-validation-for="LastName"></span><br>
    <label asp-for="LastName"></label>
    <input asp-for="LastName"><br>

    <span asp-validation-for="Email"></span><br>
    <label asp-for="Email">Email Address</label>
    <input asp-for="Email"><br>

    <span asp-validation-for="Password"></span><br>
    <label asp-for="Password">Password</label>
    <input asp-for="Password"><br>

    <span asp-validation-for="ConfirmPassword"></span><br>
    <label asp-for="ConfirmPassword">Confirm Your Password:</label>
    <input asp-for="ConfirmPassword"><br>

    <input type="submit" value="Register Now">

    


</form>